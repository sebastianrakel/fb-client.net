<Window x:Class="fb_client.net.fb_messageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="fb_messageBox" Height="173" Width="636.5">
    <Grid>
        <TextBox Margin="113,10,8,50" TextWrapping="Wrap" Text="" Name="MessageTextBox" IsReadOnly="true" BorderThickness="0"/>
        <Button Content="Ok" Margin="0,0,8,8" Name="btnOk" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnOk_Click"/>
        <Button Content="copy to clipboard" Margin="113,0,0,8" x:Name="btnCopyToClipboard" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="160" Visibility="Hidden" Click="btnCopyToClipboard_Click"/>
        <Button Content="Yes" Margin="0,0,8,8" x:Name="btnYes" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnYes_Click"/>
        <Button Content="No" Margin="0,0,88,8" x:Name="btnNo" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnNo_Click"/>
    </Grid>
</Window>
